 (c_names ocaml_utils_stubs pthread_np_stubs signal_stubs timespec unix_stubs
  unix_time_stubs nss_stubs)
 (preprocessor_deps config.h)
 (preprocess (pps ppx_jane -allow-unannotated-ignores -check-doc-comments)))
